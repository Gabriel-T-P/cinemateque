<%=page_title(t('.title'))%>

<div class="m-5">
  <%= button_link 'Adicionar Ator', new_actor_path %>
  <% unless @actors.empty? %>

    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <th scope="col" class="px-3 py-3">Nome</th>
        <th scope="col" class="px-3 py-3">Data de Nascimento</th>
        <th scope="col" class="px-3 py-3">Nacionalidade</th>
      </thead>
      <tbody>
        <% @actors.each do |actor| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td class="px-3 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%=actor.name%>
            </td>
            <td class="px-3 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%=actor.birth_date%>
            </td>
            <td class="px-3 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%=actor.nationality%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <%else%>
    <span>Nenhum Ator Cadastrado</span>
  <% end %>
</div>