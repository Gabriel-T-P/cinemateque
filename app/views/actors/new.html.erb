<%=page_title(t('.title'))%>

<%= form_with model: @actor do |f| %>

 <div class="mb-6">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-field' %>
  </div>

  <div class="mb-6">
    <%= f.label :birth_date, class: 'form-label' %>
    <%= f.date_field :birth_date, class: 'form-field' %>
  </div>

  <div class="mb-6">
    <%= f.label :nationality, class: 'form-label' %>
    <%= f.text_field :nationality, class: 'form-field' %>
  </div>

  <%= f.submit 'Criar Ator', class: 'btn-confirm' %>

<% end %>
